{
    "manifest_version": 2,
    "name": "LazyDcard",
    "description": "專門開Dcard用的擴充套件。",
    "version": "0.1.2",
    "author": "TCC",
    "homepage_url": "http://github.com/TCCinTaiwan",
    "browser_action": {
        "default_icon": "images/icon-19.png",
        "default_popup": "popup.html"
    },
    "icons": {
        "128": "images/icon-128.png"
    },
    "permissions": [
        "*://www.dcard.tw/*"
    ],
    "options_ui": {
        "chrome_style": true,
        "page": "options.htm"
    },
    "content_security_policy": "script-src 'self'; object-src 'self'"
}